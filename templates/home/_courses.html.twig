<section class="py-5" style="background-color: #EFEFEF;">
  <div class="container">
    <h2 class="fw-bold mb-4 text-center">Nos cours</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
      {% for course in courses %}
        <div class="col">
          <div class="card h-100 shadow-sm">
            <img src="{{ asset(course.image ?: 'images/courses/course-default.jpg') }}" class="card-img-top" alt="{{ course.title }}">
            <div class="card-body bg-white">
              {% if course.price %}
                <span class="badge bg-primary mb-2">Payant</span>
              {% else %}
                <span class="badge bg-success mb-2">Gratuit</span>
              {% endif %}
              <h5 class="card-title">{{ course.title }}</h5>
              <p class="card-text text-muted">{{ course.description|slice(0, 120) ~ '...' }}</p>

              <div>
              
              </div>
            </div>
            <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center">
              <a href="{{ path('app_course_show', {'id': course.id}) }}" class="btn btn-primary btn-sm">
                {% if course.price %}S'inscrire{% else %}Commencer{% endif %}
                <i class="fas fa-arrow-right ms-2"></i>
              </a>
              <small class="text-muted"><i class="fas fa-clock me-1"></i> {{ course.duration ?? 'â€“' }}</small>
            </div>
          </div>
        </div>
      {% else %}
        <p class="text-center">Aucun cours disponible pour le moment.</p>
      {% endfor %}
    </div>
  </div>
</section>
